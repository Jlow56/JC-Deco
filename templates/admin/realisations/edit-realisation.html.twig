{% extends "admin/admin-base.html.twig" %}
{% block title %}
	Réalisation N°{{ realisation.id }}
	{{ parent() }}
{% endblock %}
{% block main %}
	<main class="edit-realisation">
		<div class="btn-back-dashboard">
			<a class="back-btn" href="index.php?route=realisations-list">
				<img src="assets\img\logo\icons8-go-back-64.png" alt="boutton retour au tableau de bord">
				retourner à la liste des réalisations
			</a>
		</div>
		
		<div class="delete-article">
			<h2 class="realisation">Réalisation N°{{ realisation.id }}</h2>
			<a class="delet-btn" href="index.php?route=delete-realisation={{ realisation.id }}"> Supprimer la réalisation
				<img src="assets\img\logo\icons8-effacer-64.png" alt="boutton pour supprimer la réalisation">
			</a>
		</div>
		
		<article class="realisation">	
		<form class="realAdminForm" action="index.php?route=update-realisation" method="post" enctype="multipart/form-data">
			<input type="hidden" name="csrf-token" id="csrf-token" value="{{ sessionToken }}"/>
			
			<fieldset>
				<legend>Modifier le titre principale</legend>
				
				<label for="title1">
					Titre :
					<input type="text" name="title1" value="{{ realisation.title1 is not empty ? realisation.title1 : 'vide' }}">
				</label>
			</fieldset>
			
		
			<fieldset>
				<legend>Modifier le sous-titre n°1</legend>
				
				<label for="title2">
					Sous-titre n°1 :
					<input type="text" name="title1" value="{{ realisation.title2 is not empty ? realisation.title2 : 'vide' }}">
				</label>
			</fieldset>
			
			<fieldset>
			
			</fieldset>
			<label for="title2">
				
				<input type="text" name="title2" value="{{ realisation.title2 is not empty ? realisation.title2 : '' }}">
			</label>
			
			<h3>{{ realisation.title2 }}</h3>
		
			<p>Sous-titre n°2 :</p>
			<h4>{{ realisation.title3 }}</h4>
	
			<p>Contenu :</p>			
			{{ realisation.content }}</p>
	
			<p>Image(s) associée(s)</p> 
			{% if realisation.media is defined and realisation.media|length > 0 %}
				{% for media in realisation.media %}
					<img src="{{ 'assets/img/Realisation/' ~ media.url }}">
				{% endfor %}
			{% else %}
				<p>Aucun média lié à cette article</p>
            {% endif %}

		</article>

		<a class="back-btn" href="index.php?route=list-messages">
			<img src="assets\img\logo\icons8-go-back-64.png" alt="boutton back retour au tableau de bord">
		</a>
	</main>
{% endblock %}
