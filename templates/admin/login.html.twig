{% extends "admin/admin-base.html.twig" %}

{% block title %}
	Admin_connexion
	{{ parent() }}
{% endblock %}

{% block main %}
 <main id="loginPage">
	{% if session['error-message'] is defined %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ session['error-message'] }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
	{% endif %}
	
	<h2>Se connecter</h2>
		<form id="connexionForm" action="index.php?route=check-login" method="POST">
			<input type="hidden" name="csrf-token" id="csrf-token" value="{{ sessionToken }}">
			<fieldset>
				<label for="email">Email</label>
				<input type="email" id="email" name="email" placeholder="exemple@andrÃ©.com">
				<p class="error" id="emailError"></p>
		
				<label for="password">Mot de passe</label>
				<input type="password" id="password" name="password" placeholder="Tapez votre mot de passe">
				<p class="error" id="passwordError"></p>
				<a href="#">Mot de Passe oublier?</a>
			</fieldset>

			<button type="submit" id="submitBtn" disabled>Connexion</button>

		</form>
</main>
{% endblock %}
