{% extends "admin/admin-base.html.twig" %}
{% block title %}
	estimate N°{{ pricing.id }}
	{{ parent() }}
{% endblock %}


{% block main %}
	<main id="pricing_show">
		<a class="back-btn" href="index.php?route=list-pricings">
			<img src="assets\img\logo\icons8-go-back-64.png" alt="boutton back retour au tableau de bord">
		</a>
		<h2 class="pricing">estimate N°{{ pricing.id }}
			<a class="edit_btns" href="index.php?route=delete-pricing&id={{ pricing.id }}">
				<img src="assets\img\logo\icons8-effacer-64.png" alt="boutton pour supprimer le devis">
			</a>
		</h2>

		<p>
			<span>À recontacter par :</span>
			{{ pricing.contact_mode }}</p>
		<p>
			<span>Prénom :</span>
			{{ pricing.firstname }}</p>
		<p>
			<span>Nom :</span>
			{{ pricing.lastname }}</p>
		<p>
			<span>Email :</span>
			{{ pricing.email }}</p>
		<p>
			<span>Téléphone :</span>
			{{ pricing.tel }}</p>
		<p>
			<span>Ville :</span>
			{{ pricing.city }}</p>
		<p>
			<span>Message :</span>
			{{ pricing.message }}</p>
		{% if pricing.details is defined and pricing.details is not null %}
			<p>
				<span>Options :</span>
			</p>
			<ul>
				{%  for detail in pricing.details %}
					<li>•
						{{ detail.title }}</li>
				{% endfor %}
			</ul>
		{% endif %}
		<p>
			<span>Image(s) à l'appui :</span>
		</p>
		{% if pricing.picture_path is defined and pricing.picture_path is not null %}
			<img src="{{ pricing.picture_path }}" alt="image"/>
		{% endif %}
		<a class="back-btn" href="index.php?route=list-pricings">
			<img src="assets\img\logo\icons8-go-back-64.png" alt="boutton back retour au tableau de bord">
		</a>
	</main>
{% endblock %}
