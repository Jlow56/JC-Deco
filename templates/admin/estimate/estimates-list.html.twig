{% extends "admin/admin-base.html.twig" %}
{% block title %}
	estimate
	{{ parent() }}
{% endblock %}


{% block main %}
	<main id="admin_pricing_page">
		<div class="btn-back-dashboard">
			<a class="back-btn" href="index.php?route=dashboard">
				<img src="assets\img\logo\icons8-go-back-64.png" alt="boutton back retour au tableau de bord">
				<p>retour au tableau de bord</p>
			</a>
		</div>

		<h2 class="pricing">Devis</h2>

		<table class="pricing_table">
			<thead>
				<tr>
					<th scope="col">Devis N°</th>
					<th scope="col">N° à recontacter</th>
					<th scope="col">Prénom</th>
					<th scope="col">Nom</th>
					<th scope="col">Nom</th>
					<th scope="col">Email</th>
					<th scope="col">Édition</th>
				</tr>
			</thead>
			<tbody>
				{%  for estimate in estimates %}
					<tr>
						<td>{{ estimate.id }}</td>
						<td>{{ estimate.phone }}</td>
						<td>{{ estimate.firstname }}</td>
						<td>{{ estimate.lastname }}</td>
						<td>{{ estimate.email }}</td>
						<td>
							<ul class="pricing_edit_btns">
								<li>
									<a href="index.php?route=show-pricing&id={{estimate.id }}">
										<img src="assets\img\logo\icons8-voir-le-fichier-64.png" alt="logo voir le devis">
									</a>
								</li>
								<li>
									<a href="index.php?route=delete-pricing&id={{ estimate.id }}">
										<img src="assets\img\logo\icons8-effacer-64.png" alt="boutton pour supprimer le devis">
									</a>
								</li>
							</ul>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<div class="btn-back-dashboard">
			<a class="back-btn" href="index.php?route=dashboard">
				<img src="assets\img\logo\icons8-go-back-64.png" alt="boutton back retour au tableau de bord">
				<p>retour au tableau de bord</p>
			</a>
		</div>
	</main>
{% endblock %}
